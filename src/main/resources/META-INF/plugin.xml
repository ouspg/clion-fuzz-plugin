<idea-plugin>
    <id>org.ouspg.jetbrains.fuzz-testing-plugin</id>
    <name>FuzzTesting</name>
    <vendor email="ouspg@ee.oulu.fi" url="https://www.oulu.fi/bisg/ouspg">OUSPG</vendor>

    <!-- TODO add proper description and stuff -->
    <description><![CDATA[
    The plugin enables to add Fuzz testing and debugging features, to the development cycle of C/C++ programs<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.cidr.lang</depends>
    <depends>com.intellij.modules.cidr.debugger</depends>
    <depends>com.intellij.modules.clion</depends>
    <depends>com.zero9178</depends>

    <depends>org.jetbrains.plugins.terminal</depends>

    <!-- Application-level listeners -->
    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="config.FuzzerRunConfigurationType" id="fuzzer.run.config.type"/>
        <toolWindow id="Fuzzer Console" factoryClass="windows.FuzzerConsoleToolWindowFactory" anchor="bottom" secondary="false" />
        <toolWindow id="Crashes" factoryClass="windows.CrashesToolWindowFactory" anchor="right" secondary="false" />

        <projectService serviceImplementation="settings.PluginSettingsConfig"/>
        <projectService serviceImplementation="settings.BuildSettingsConfig"/>
        <projectService serviceImplementation="settings.AflSettingsConfig"/>
        <projectService serviceImplementation="settings.CoverageSettingsConfig"/>

        <projectConfigurable groupId="tools" groupWeight="110" id="settings.dialog.fuzzer.plugin"
                             instance="settings.PluginSettingsConfigurable"/>
        <projectConfigurable groupId="settings.dialog.fuzzer.plugin" groupWeight="110" id="settings.dialog.fuzzer.build"
                             instance="settings.BuildSettingsConfigurable"/>

        <projectConfigurable groupId="settings.dialog.fuzzer.plugin" groupWeight="110" id="settings.dialog.fuzzer.coverage"
                             instance="settings.AflSettingsConfigurable"/>
        <projectConfigurable groupId="settings.dialog.fuzzer.plugin" groupWeight="110" id="settings.dialog.fuzzer.fuzzer"
                             instance="settings.CoverageSettingsConfigurable"/>
    </extensions>
    <actions>
        <!-- Add your actions here -->
    </actions>
    <idea-version since-build="CL-193"/>
</idea-plugin>
